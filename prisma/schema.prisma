// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  isPremium     Boolean   @default(false)
  premiumExpiry DateTime?
  // settings now stores: { pushToken, platform, pushNotificationsEnabled }
  settings      Json?     @default("{}")
  reports       Report[]
  cleanLogs     CleanLog[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([isPremium])
}

model Report {
  id           String   @id @default(cuid())
  userId       String
  storageUsed  Float
  storageFreed Float
  deviceName   String
  osVersion    String?
  timestamp    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([timestamp])
}

model CleanLog {
  id          String   @id @default(cuid())
  userId      String
  cleanType   String   // "junk", "duplicate", "cache"
  filesRemoved Int
  spaceFreed  Float    // in MB
  timestamp   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  batteryBefore Int?
  batteryAfter Int?

  @@index([userId])
  @@index([timestamp])
}